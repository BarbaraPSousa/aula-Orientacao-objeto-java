/*Incluindo Contruto*/


package entities;

//Atributos
public class Product {
	public String name;
	public double price;
	public int quantity;
	
//Construtores(coloca sempre depois do atributos antes dos metados)
	public Product(String name, double price, int quantity) { // dentro dos parentes vai a declaraçao, pode ser o mesmo do atibutos ou não, mas por padra sim
		this.name  = name;
		this.price = price;
		this.quantity = quantity;
	}
	
	
//Metados
	public double totalValueInStock() {
		return price * quantity;
	}

	public void addProducts(int quantity) {
		this.quantity += quantity;
	}

	public void removeProducts(int quantity) {
		this.quantity -= quantity;
	}

	public String toString() {
		return name + ", $ " 
				+ String.format("%.2f", price) 
				+ ", " + quantity 
				+ " units, Total: $ "
				+ String.format("%.2f", totalValueInStock());
	}
}